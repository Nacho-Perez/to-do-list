<%= form_with(model: @task, remote: true) do |form| %>

  <div class="form-group">
    <%= form.text_area :description, id: :task_description, placeholder: "¡Describe tu tarea!", class: "form-control" %>
  </div>

  <div class="row">
    <div class="col-sm-6">
        <div class="form-group">
          <%= form.label "¿Para cuándo es?" %>
          <div class="input-group date" id="datetimepicker1" data-target-input="nearest">
              <!--
              <input type="text" class="form-control datetimepicker-input" data-target="#datetimepicker1"/>
                Modificamos para asignar el nombre ':deadline' y asigne las fechas correctamente -->
              <%= form.text_field :deadline, class: "form-control datetimepicker-input", data: {target: "#datetimepicker1"} %>

              <div class="input-group-append" data-target="#datetimepicker1" data-toggle="datetimepicker">
                  <div class="input-group-text"><i class="fa fa-calendar"></i></div>
              </div>
          </div>
        </div>
    </div>
  </div>

  <div class="form-group">
    <%= form.submit(options={class: "btn btn-dark"}) %>
  </div>
<% end %>
